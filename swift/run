#!/usr/bin/env zsh

echo "--------------------------------------------"
echo "| swift run hello                          |"
echo "|           basic                          |"
echo "|           character                      |"
echo "|           collection                     |"
echo "|           controlFlow                    |"
echo "|           closures                       |"
echo "|           enumeration                    |"
echo "|           classes                        |"
echo "|           subscript                      |"
echo "|           inheritan                      |"
echo "|           optionals                      |"
echo "|           errorHandle                    |"
echo "|           typeCasting                    |"
echo "|           nestedType                     |"
echo "--------------------------------------------"

if [[ ! -n $1 ]]; then 
	read -p "swift run " name
else
	name=$1
fi

if [[ -n "$name" ]]; then
	echo "Run ${name}"
	swift run $name
fi
